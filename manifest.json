{
  "name":        "GithubCodeReviewHelper",
  "version":     "0.4.0",
  "description": "githubでのコードレビュー支援",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "clipboardRead",
    "https://github.com/*",
    "http://www.lgtm.in/g"
  ],
  "background": {
    "scripts": [
      "app/background.js"
    ]
  },
  "browser_action": {
    "default_title": "GithubCodeReviewHelper",
    "default_popup": "html/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": [
        "lib/jquery-2.1.4.min.js",
        "app/class/tab_converter.js",
        "app/onmessage.js"
      ],
      "css": ["css/style.css"]
    }
  ]
}
